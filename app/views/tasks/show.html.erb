<div class="container-md">
<h1> <%= @task.title %> </h1>
<p> <%= @task.details %> </p>
<p> <% if @task.completed? == true %>
    <%= "Completed" %>
    <% else %>
    <%= "Not completed" %>
    <% end %>
    <%= link_to "EDIT", edit_task_path(@task) %>
</p>
<%= link_to "Back to list", tasks_path(@tasks) %>
</div>

<h1>EDIT TASK</h1>

<%= simple_form_for(@task) do |f| %>
  <%= f.input :title %>
  <%= f.input :details %>
  <%= f.submit %>
<% end %>

<button><%= link_to "CONFIRM THE MODIFICATIONS", task_path(@task) %></button>

<%= link_to "TASK IS FINE", tasks_path %>

<%= link_to "Back to list", tasks_path(@tasks) %>

